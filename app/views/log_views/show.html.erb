<%- model_class = LogView -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:project_id) %>:</strong></dt>
  <dd><%= @log_view.project_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:log_type_id) %>:</strong></dt>
  <dd><%= @log_view.log_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:log_file) %>:</strong></dt>
  <dd><%= @log_view.log_file %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              log_views_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_log_view_path(@log_view), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              log_view_path(@log_view),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
